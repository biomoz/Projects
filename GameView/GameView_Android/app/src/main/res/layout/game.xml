<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:padding="13dp">

            <ImageView
                android:id="@+id/game_cover"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/game_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#000"
                android:textSize="40sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/game_cover"
                app:layout_constraintStart_toEndOf="@id/game_cover"
                app:layout_constraintTop_toTopOf="@id/game_cover" />

            <TextView
                android:id="@+id/game_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Title"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/game_id_txt"
                app:layout_constraintTop_toTopOf="@+id/game_cover" />

            <TextView
                android:id="@+id/game_genre_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Genre"
                app:layout_constraintStart_toStartOf="@+id/game_title_txt"
                app:layout_constraintTop_toBottomOf="@+id/game_title_txt" />

            <TextView
                android:id="@+id/game_score_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Score"
                android:textSize="50dp"
                android:gravity="center"
                android:background="@drawable/score_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.822"
                app:layout_constraintStart_toStartOf="@+id/game_genre_txt"
                app:layout_constraintTop_toTopOf="@+id/game_cover"
                app:layout_constraintVertical_bias="0.416" />

            <TextView
                android:id="@+id/game_rd_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="120"
                app:layout_constraintStart_toStartOf="@+id/game_genre_txt"
                app:layout_constraintTop_toBottomOf="@+id/game_genre_txt" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>